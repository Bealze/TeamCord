<Window x:Class="TeamCord.GUI.ConnectionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamCord.GUI"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="Connection Info" Height="450" Width="400">
    <Grid Name="gridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="350" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="stackPanelLeft" Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" />
        <StackPanel x:Name="stackPanelRight" Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>